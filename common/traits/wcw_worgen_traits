feral_worgen = {
    desc = {
		first_valid = {
			triggered_desc = {
				trigger = {
					NOT = { exists = this }
				}
				desc = trait_feral_worgen_desc
			}
			desc = trait_creature_feral_worgen_character_desc
		}
	}
	shown_in_ruler_designer = yes
    diplomacy = -5
	martial = 3
	intrigue = 1
	learning = -2
	prowess = 5
	
	stress_gain_mult = -0.2
	dread_baseline_add = 10
	

	category = physical
	genetic = yes
	bad = yes
	#inherit_chance = 100
	#both_parent_has_trait_inherit_chance = 100
	
}
